    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jobDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobTitleTextView"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobDescTextView"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/jobInformationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobLocationTextView"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="italic" />
</RelativeLayout>
