        <!-- MainActivity harus di-export agar bisa diluncurkan oleh sistem -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- JobDetailActivity tidak perlu di-export jika hanya digunakan secara internal -->
        <activity
            android:name=".JobDetailActivity"
            android:exported="false" />
    </application>

</manifest>
